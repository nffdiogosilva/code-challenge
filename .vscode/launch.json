    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "migrate",
            ],
            "django": true
        },
        {
            "name": "Run Django Webserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true
        }
    ]
}